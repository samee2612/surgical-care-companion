# TKA Voice Agent Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-ngrok-url.com

# =============================================================================
# AI SERVICES
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
WHISPER_MODEL=base
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/tka_voice
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=tka_voice

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
RELOAD=true

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@tka-voice-agent.com

# =============================================================================
# CLINICAL SETTINGS
# =============================================================================
DEFAULT_CALL_SCHEDULE=1,3,7,14,30
MAX_CALL_DURATION_MINUTES=15
URGENT_ALERT_THRESHOLD=7
RESPONSE_TIMEOUT_SECONDS=30

# =============================================================================
# FILE HANDLING
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_FORMATS=["wav","mp3","m4a","flac"]

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
NGROK_AUTHTOKEN=your_ngrok_token_here

# =============================================================================
# CORS SETTINGS
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
